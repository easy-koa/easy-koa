{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "./@types/",
            "./node_modules/@types/"
        ],
        "target": "es5",
        "types": [
            "@kaola/microservices",
            "log4js",
            "koa",
            "http-proxy",
            "pify",
            "art-template"
        ],
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@kaola/kapp": ["packages/run"],
            "@kaola/kapp-core": ["packages/core"],
            "@kaola/kapp-core/*": ["packages/core/*"],
            "@kaola/kapp-logger": ["packages/logger"],
            "@kaola/kapp-logger/*": ["packages/logger/*"],
            "@kaola/kapp-cron": ["packages/cron"],
            "@kaola/kapp-forwarder": ["packages/forwarder"],
            "@kaola/kapp-shared": ["packages/shared"],
            "@kaola/kapp-shared/*": ["packages/shared/*"],
            "@kaola/kapp-microservice": ["packages/microservice"],
            "@kaola/kapp-monitor": ["packages/monitor"],
            "@kaola/kapp-monitor/*": ["packages/monitor/*"],

            "@kaola/kapp-server": ["packages/server"],
            "@kaola/kapp-server/*": ["packages/server/*"]
        },
        "experimentalDecorators": true,
        "declaration": true
    },
    "files": [
        "packages/run/index.ts"
    ],
    "include": [
        "packages/**/*",
        "examples/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

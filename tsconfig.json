{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "./@types/",
            "./node_modules/@types/"
        ],
        "target": "es5",
        "types": [
            "@kaola/microservices",
            "log4js",
            "koa",
            "http-proxy",
            "art-template"
        ],
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@kapp/*": ["packages/*"]
        },
        "outDir": "./dist",
        "experimentalDecorators": true,
        "declaration": true
    },
    "files": [
        "packages/run/index.ts"
    ],
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

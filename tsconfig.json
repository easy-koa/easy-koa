{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "./@types/",
            "./node_modules/@types/"
        ],
        "target": "es5",
        "types": [
            "chalklog",
            "parrotsay-api",
            "@kaola/microservices",
            "log4js",
            "koa"
        ],
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./lib"
    },
    "files": [
        "packages/run/index.ts"
    ],
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

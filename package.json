{
  "name": "@kaola/kapp.js",
  "version": "0.0.0",
  "description": "A Microservices framework for node.js",
  "main": "dist/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "test": "npm run build",
    "build": "tsc",
    "dev": "npm run build -- -w",
    "start": "ts-node ./examples/web-architecture/bootstrap",
    "boot": "lerna bootstrap && gulp cp && cd ./dist/ && lerna init && lerna bootstrap",
    "clear": "rm -rf dist && lerna clean",
    "prerelease": "npm run build",
    "afterrelease": "gulp clear",
    "release": "npm run prerelease && lerna publish --registry http://rnpm.hz.netease.com/  --scope @kaola/** -f && npm run afterrelease"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaola-fed/Kapp.js.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaola-fed/Kapp.js/issues"
  },
  "homepage": "https://github.com/kaola-fed/Kapp.js#readme",
  "devDependencies": {
    "@types/http-proxy": "^1.12.2",
    "@types/koa": "^2.0.41",
    "@types/koa-router": "^7.0.26",
    "@types/node": "^8.0.47",
    "gulp": "^3.9.1",
    "gulp-rm": "^1.0.4",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1"
  }
}
